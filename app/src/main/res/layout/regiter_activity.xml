<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EC9A42"
        tools:context=".MainActivity">
    <TextView

            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/round_background"
            android:textSize="18sp"
            android:hint="Full Name..."
            android:id="@+id/txt_full_name_register"
            android:layout_width="342dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/round_background"
            android:layout_width="342dp"
            android:layout_height="61dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txt_user_name_register" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:hint="UseName...." android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_full_name_register"/>
    <EditText
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/round_background"
            android:layout_width="342dp"
            android:layout_height="61dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txt_user_name_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:hint="Email......." android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginTop="152dp" app:layout_constraintTop_toBottomOf="@+id/txt_full_name_register"/>

    <EditText
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/round_background"
            android:layout_width="344dp"
            android:layout_height="64dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_password_register"
            android:hint="Passowrd......."
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="348dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.888"/>
    <TextView
            android:text="Instragram"
            android:layout_width="251dp"
            android:layout_height="66dp"
            android:id="@+id/textView2" android:gravity="center"
            android:textSize="30sp" android:textColor="#FAF7F7" android:fontFamily="serif" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.197" android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="76dp"/>
    <Button
            android:background="@drawable/register_button"
            android:text="Register"
            android:textSize="24dp"
            android:layout_width="372dp"
            android:layout_height="65dp"
            android:id="@+id/btn_register" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="176dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.478"/>
    <Button
            android:text="Already have an account ? Sign in"
            android:layout_width="384dp"
            android:layout_height="55dp"
            android:id="@+id/need_an_account"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.727"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
            android:background="@android:color/holo_red_light" android:textColor="#FDFBFB"/>


</androidx.constraintlayout.widget.ConstraintLayout>
