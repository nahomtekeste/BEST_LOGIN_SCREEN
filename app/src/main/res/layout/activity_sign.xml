<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#EC9A42"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/round_background"
            android:layout_width="400dp"
            android:layout_height="68dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txt_user_name_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:hint="Email......." android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.503"
    />
    <EditText
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/round_background"
            android:layout_width="404dp"
            android:layout_height="66dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_password_login"
            android:hint="Passowrd......."
            android:textSize="24sp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_user_name_email"/>
    <TextView
            android:text=" Instragram"
            android:layout_width="251dp"
            android:layout_height="66dp"
            android:id="@+id/textView2" android:gravity="center"
            android:textSize="30sp" android:textColor="#FAF7F7" android:fontFamily="serif" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.18"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <Button
            android:background="@drawable/register_button"
            android:text="Login"
            android:textSize="24dp"
            android:layout_width="397dp"
            android:layout_height="72dp"
            android:id="@+id/btn_register" app:layout_constraintStart_toStartOf="@+id/txt_password_login"
            app:layout_constraintEnd_toEndOf="@+id/txt_password_login" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.166"
            android:textStyle="bold" android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toTopOf="@+id/need_an_account"/>
    <Button
            android:text="Need New Account ? Sign Up"
            android:layout_width="384dp"
            android:layout_height="55dp"
            android:id="@+id/need_an_account"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.727"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
            android:background="@color/colorBlue" android:textColor="#FDFBFB"/>



</androidx.constraintlayout.widget.ConstraintLayout>